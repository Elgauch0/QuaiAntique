{% extends 'base.html.twig' %}

{% block title %}Ajouter un plat
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/dish/add.css')}}">
{% endblock %}
{% block body %}


	{% for message in app.flashes('success') %}
		<div class="alert-success">
			{{ message }}
		</div>
	{% endfor %}

	<fieldset class="form-group">
		<legend class="legendForm">Ajouter un plat</legend>
		{{ form_start(form) }}

		{{ form_row(form.nom) }}
		{{ form_row(form.description) }}
		{{ form_row(form.prix) }}
		{{ form_row(form.Category) }}
		{{ form_row(form.save) }}

		{{ form_end(form) }}


	</fieldset>
{% endblock %}
